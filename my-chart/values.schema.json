{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
      "replicaCount": {
        "type": "integer",
        "minimum": 1
      },
      "image": {
        "type": "object",
        "properties": {
          "repository": { "type": "string" },
          "tag": { "type": "string" }
        },
        "required": ["repository", "tag"]
      }
    },
    "required": ["replicaCount", "image"]
  }
  